<%= form_for(address)  do |f| %>

		<table class="table table-hover table-inverse">
			<tr>
				<th colspan="4"><%= f.label :"郵便番号(ハイフンなし)" %></th>
				<td colspan="4"><%= f.text_field :postal_code, class: "postal_code" %></td>
			</tr>
			<tr>
				<th colspan="4"><%= f.label :住所 %></th>
				<td colspan="4"><%= f.text_area :address, class: "address" %></td>
			</tr>
			<tr>
				<th colspan="4"><%= f.label :宛名 %></th>
				<td colspan="4"><%= f.text_area :address_name, class: "address_name" %></td>
			</tr>
		</table>
				<div style="text-align: center;"><%= f.submit "登録する", class: "btn-sm btn-success" %></div>
				<% end %>