<div class="container">
	<div class="row">
			<div class="col-xs-4">
				<h2>ジャンル検索</h2>
				<ul>
				<% @genres.each do |genre| %>
				<li>
					<%= genre.genre_name %>
				</li>
				<% end %>
			</ul>
			</div>

　　　　　　<div class="row">
			<div class="col-xs-8">
				<h2>商品一覧</h2><p>(全<%= @items.count %>件)</p>
				<div class="item">
					<div class="itemlist">
						<dl>
							<% @items.each do |item| %>
							<dd><%= attachment_image_tag(item, :item_image, :fill,100,100,format: 'jpeg') %></dd>
							<dt><%= link_to item.item_name,item_path(item) %></dt>
							<dd><%= item.price %></dd>
							<% end %>
						</dl>
					</div>
				</div>
			</div>
		  </div>
		<%= paginate @items %>
	</div>
</div>