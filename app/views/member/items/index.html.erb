<br>
<div class="container">
	<div class="row">
		<div class="col-3" style="border: 1px solid #C0C0C0; padding: 10px; margin-top: 40px; height: auto;">
			<h5 style="text-align: center;">ジャンル検索</h5>
			<hr>
			<ul>
				<% @genres.each do |genre| %>
				<li><%= genre.genre_name %></li>
				<% end %>
			</ul>
		</div>
		<div class="col-9">
			<h5>商品一覧</h5><p>(全<%= @items.count %>件)</p>
			<div style="display: flex;">
				<% @items.each do |item| %>
				<div style="border: 1px solid #C0C0C0; padding: 5px; margin: 5px;">
					<%= attachment_image_tag item, :item_image, size: "100x100", fallback: "no_image.jpg" %><br>
					<%= link_to item.item_name, item_path(item.id) %><br>
					<%= item.price %>
				</div>
				<% end %>
			</div>
		</div>
	</div>
	<%= paginate @items %>
</div>