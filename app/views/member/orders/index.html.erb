<div class="container">
	<div class="row">
		<div class="col-xs-12">
			<h2>注文履歴一覧</h2>

			 <table class="table table-hover table-inverse" border="1" style="border-collapse: collapse">
			  <thead>
				<tr>
				  <th colspan="2">注文日</th>
				  <th colspan="4">配送先</th>
				  <th colspan="2">注文商品</th>
			      <th colspan="1">支払金額</th>
			      <th colspan="2">ステータス</th>
			      <th colspan="2">注文詳細</th>
				</tr>
			  </thead>

			 <tbody>
			  <% @orders.each do |order| %>
				<tr>
				  <td colspan="2"><%= order.created_at.strftime('%Y/%m/%d')  %></td>
				  <td colspan="4"><p><%= order.postal_code %></p>
				             	  <p><%= order.address %></p>
				  	              <p><%= order.address_name %></p></td>
				  <td colspan="2"></td>
				  <!-- 商品名入れる -->

				  <td colspan="1"><%= order.bill + order.postage %></td>
				  <td colspan="2"><%= order.order_status %></td>
				  <td colspan="2"><%= link_to"表示する",order_path(order.id),class: "btn-sm btn-primary" %></td>
			  <% end %>
				</tr>
			 </tbody>
		    </table>

		</div>
	</div>
</div>
