<!DOCTYPE html>
<html>
  <head>
    <title>Naganocake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <header class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <div class="row">
            <a class="navbar-brand" href="/">NaganoCake</a>
            <div class="">
          <nav class="site-nav">
            <ul class="navbar-nav">
            <% if member_signed_in? %>
              <p style="color: #FFF; padding: 0 10px;">ようこそ<%= current_member.surname %> <%= current_member.name %>さん</p>
              <li class="list-items"><%= link_to 'マイページ', member_path(current_member) %></li>
              <li class="list-items"><%= link_to '商品一覧', items_path %></li>
              <li class="list-items"><%= link_to 'カート', cart_items_path %></li>
              <li class="list-items"><%= link_to 'ログアウト',  destroy_member_session_path, method: :delete %></li>
            <% elsif admin_signed_in? %>
              <li class="list-items"><%= link_to '商品一覧', admin_items_path %></li>
              <li class="list-items"><%= link_to '会員一覧', admin_admin_index_path %></li>
              <li class="list-items"><%= link_to '注文履歴一覧', '#' %></li>
              <li class="list-items"><%= link_to 'ジャンル一覧', admin_genres_path %></li>
              <li class="list-items"><%= link_to 'ログアウト', destroy_admin_session_path, method: :delete %></li>
            <% else %>
              <li class="list-items"><%= link_to '商品一覧', items_path %></li>
              <li class="list-items"><%= link_to '新規登録', new_member_registration_path %></li>
              <li class="list-items"><%= link_to 'ログイン', new_member_session_path %></li>
            <% end %>
            </ul>
          </nav>
      </div>
    </div>
  </header>
  <main>
    <%= yield %>
  </main>
  <footer>
  </footer>
  </body>
</html>
