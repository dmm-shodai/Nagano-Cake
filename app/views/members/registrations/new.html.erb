<br>
<div class="container">
  <div class="row">
      <h2>新規会員登録</h2>
  </div>

  <div class="row">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form">
        (<%= f.label :姓 %>)
        <%= f.text_field :surname, autofocus: true, autocomplete: "surname" %>
      </div>

      <div class="form">
        <%= f.label :名 %>
        <%= f.text_field :name, autocomplete: "name" %>
      </div>

      <div class="form">
        <%= f.label :セイ %>
        <%= f.text_field :kana_surname, autocomplete: "kana_surname" %>
      </div>

      <div class="form">
        <%= f.label :メイ %>
        <%= f.text_field :kana_name, autocomplete: "kana_name" %>
      </div>

      <div class="form">
        <%= f.label :メールアドレス %>
        <%= f.email_field :email, autocomplete: "email" %>
      </div>

       <div class="form">
        <%= f.label :"郵便番号(ハイフンなし)" %>
        <%= f.text_field :postal_code, autocomplete: "postal_code" %>
      </div>

       <div class="form">
        <%= f.label :住所 %>
        <%= f.text_area :address, autocomplete: "address" %>
      </div>

       <div class="form">
        <%= f.label :"電話番号(ハイフンなし)" %>
        <%= f.telephone_field :phone, autocomplete: "phone" %>
      </div>

      <div class="field">
          <%= f.label :パスワード %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %>文字以上)</em>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :パスワード（確認用） %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <br>

      <div class="text-center">
        <%= f.submit "新規登録", class: "btn btn-success" %>
      </div>
  </div>

  <br>

  <div class="row">
    <div class="col-xs-12">
      <h2>既に登録済みの方</h2>
      <%= link_to "こちら", new_session_path(resource_name) %>からログインしてください。
    </div>
  </div>
</div>
<% end %>

