<br>
<div class="container">
  <div class="row justify-content-md-center">
    <div class="col-10 ">
      <h4>新規会員登録</h4>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

    <table class="table table-condensed">
      <tr>
        <th><%= f.label :名前 %> (<%= f.label :姓 %>) (<%= f.label :名 %>)</th>
        <td><%= f.text_field :surname, autofocus: true, autocomplete: "surname" %> <%= f.text_field :name, autocomplete: "name" %></td>
      </tr>
      <tr>
        <th><%= f.label :フリガナ %> (<%= f.label :セイ %>) (<%= f.label :メイ %>)</th>
        <td><%= f.text_field :kana_surname, autocomplete: "kana_surname" %> <%= f.text_field :kana_name, autocomplete: "kana_name" %></td>
      </tr>
      <tr>
        <th><%= f.label :メールアドレス %></th>
        <td><%= f.email_field :email, autocomplete: "email" %></td>
      </tr>
      <tr>
        <th><%= f.label :"郵便番号(ハイフンなし)" %></th>
        <td><%= f.text_field :postal_code, autocomplete: "postal_code" %></td>
      </tr>
      <tr>
        <th><%= f.label :住所 %></th>
        <td><%= f.text_area :address, autocomplete: "address" %></td>
      </tr>
      <tr>
        <th><%= f.label :"電話番号(ハイフンなし)" %></th>
        <td><%= f.telephone_field :phone, autocomplete: "phone" %></td>
      </tr>
      <tr>
        <th><%= f.label :パスワード %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %>文字以上)</em>
            <% end %>
        </th>
        <td><%= f.password_field :password, autocomplete: "new-password" %></td>
      </tr>
      <tr>
        <th><%= f.label :パスワード（確認用） %></th>
        <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
      </tr>
    </table>
      <hr>
      <br>

      <div class="text-center">
        <%= f.submit "新規登録", class: "btn btn-success btn-lg" %>
      </div>
    </div>
  </div>

  <br>

  <div class="row justify-content-md-center" style="margin-bottom: 50px;">
    <div class="col-10">
      <h5>既に登録済みの方</h5>
      <%= link_to "こちら", new_session_path(resource_name) %>からログインしてください。
    </div>
  </div>
</div>
<% end %>

