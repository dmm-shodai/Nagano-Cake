<br>
<div class="container">
  <div class="row">
      <h2>新規会員登録</h2>
  </div>

  <div class="row">
    <div class="col-xs-5"></div>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :名前 %>
        <%= f.label :"(姓)" %>
        <%= f.label :"(名)" %> 
        <%= f.text_field :surname, autofocus: true, autocomplete: "surname" %>
        <%= f.text_field :name, autocomplete: "name" %>
      </div>

      <div class="field">
        <%= f.label :フリガナ %>
        <%= f.label :"(セイ)" %>
        <%= f.label :"(メイ)" %>
        <%= f.text_field :kana_surname, autocomplete: "kana_surname" %>
        <%= f.text_field :name, autocomplete: "kana_name" %>
      </div>

      <div class="field">
        <%= f.label :メールアドレス %>
        <%= f.email_field :email, autocomplete: "email" %>
      </div>

      <div class="field">
          <%= f.label :パスワード %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %>文字以上)</em>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :パスワード（確認用） %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
      
      <br>
      
      <div class="text-center">
        <%= f.submit "新規登録", class: "btn btn-success" %>
      </div>
  </div>

  <br>
  
  <div class="row">
    <div class="col-xs-12">
      <h2>既に登録済みの方</h2>
      <%= link_to "こちら", new_session_path(resource_name) %>からログインしてください。
    </div>
  </div>
</div>
<% end %>

