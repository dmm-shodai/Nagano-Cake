<div class = "container">
  <div class = "row">
   <%= @member.surname %><%= @member.name %>さんの会員情報編集<br>
    会員ID<%= @member.id %><br>
   <%= form_with(model:@member, url:admin_admin_path,local:true) do |form| %>	
       <%= form.label :氏名 %>
	    <%= form.text_field :surname %>
	    <%= form.text_field :name %><br>
	   <%= form.label :フリガナ %>
	    <%= form.text_field :kana_surname %>
	    <%= form.text_field :kana_name %><br>
	   <%= form.label :郵便番号 %>
        <%= form.text_field :postal_code %><br>
       <%= form.label :住所 %>
        <%= form.text_field :address %><br>
       <%= form.label :電話番号 %>
        <%= form.text_field :phone %><br>
       <%= form.label :メールアドレス %>
        <%= form.text_field :email %><br>
       <%= form.radio_button :quit, :true %>
       <%= form.label :quit, "有効", {value: :true, style: "display: inline-block;"} %>
       <%= form.radio_button :quit, :false %>
       <%= form.label :quit, "無効", {value: :false, style: "display: inline-block;"} %>
       <%= form.submit :変更を保存する %>
　　　　<%= form.submit %>　　
	<% end %>
　</div>
</div>