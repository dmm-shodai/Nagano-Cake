<div class="container">
	<div class="row">
		<div class="col-xs-12">
			<h2>注文履歴詳細</h2>

			<div class="row">
				<div class="col-xs-8">
					<h3>注文情報</h3>
					<table class="table table-hover table-inverse" border="1" style="border-collapse: collapse">
						<tbody>
							<tr>
								<th colspan="3">注文日</th>
								<td colspan="9"><%= @order.created_at.strftime('%Y/%m/%d')  %></td>
							</tr>
							<tr>
								<th colspan="3">配送先</th>
								<td colspan="9"><p><%= @order.postal_code %></p>
									<p><%= @order.address %></p>
									<p><%= @order.address_name %></p></td>
								</tr>
								<tr>
									<th colspan="3">支払方法</th>
									<td colspan="9"><%= @order.payment %></td>
								</tr>
								<tr>
									<th colspan="3">注文ステータス</th>
									<td colspan="9"><%= @order.order_status %></td>
								</tr>
							</tbody>
						</table>
					　　</div>
				　　</div>

				<div class="col-xs-4">
					<h3>請求情報</h3>
					<table class="table table-hover table-inverse" border="1" style="border-collapse: collapse">
						<tbody>
							<tr>
								<th colspan="4">商品合計</th>
								<td colspan="3"></td>
								<!-- 商品合計出す -->
							</tr>
							<tr>
								<th colspan="4">配送料</th>
								<td colspan="3"></td>
								<!-- 配送料出す -->
							</tr>
							<tr>
								<th colspan="4">ご請求金額</th>
								<td colspan="3"></td>
								<!-- 請求金額出す -->
							</tr>
						</tbody>
					</table>
				</div>

				<div class="row">
					<div class="col-xs-10">
						<table class="table table-hover table-inverse" border="1" style="border-collapse: collapse">
							<thead>
								<tr>
									<th colspan="6">商品</th>
									<th colspan="2">単価（税込）</th>
									<th>個数</th>
									<th>小計</th>
								</tr>
							</thead>
							<tbody>
								<td colspan="6"></td>
								<td colspan="2"></td>
								<td></td>
								<td></td>
								<!-- 各項目記載する -->
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
