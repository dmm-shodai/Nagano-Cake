<div class="container">
	<div class="row">
		<div class="col-xs-12">
			<h2>注文履歴詳細</h2>

			<div class="row">
				<div class="col-xs-8">
					<h3>注文情報</h3>
					<table class="table table-hover table-inverse" border="1" style="border-collapse: collapse">
						<tbody>
							<tr>
								<th colspan="3">注文日</th>
								<td colspan="9"><%= @order.created_at.strftime('%Y/%m/%d')  %></td>
							</tr>
							<tr>
								<th colspan="3">配送先</th>
								<td colspan="9"><p><%= @order.postal_code %></p>
									<p><%= @order.address %></p>
									<p><%= @order.address_name %></p></td>
								</tr>
								<tr>
									<th colspan="3">支払方法</th>
									<td colspan="9"><%= @order.payment %></td>
								</tr>
								<tr>
									<%= form_for(@order, url:admin_order_path) do |f| %>
									<th colspan="3"><%= f.label :注文ステータス %></th>
									<td colspan="9"><%= f.select :order_status, [["入金待ち","入金待ち"], ["入金確認", "入金確認"], ["製作中","製作中"], ["発送準備中", "発送準備中"], ["発送済み", "発送済み"]] %>
										<%= f.submit :更新 %>
										</td>
									<% end %>
								</tr>
							</tbody>
						</table>
					　　</div>
				　　</div>

				<div class="col-xs-4">
					<h3>請求情報</h3>
					<table class="table table-hover table-inverse" border="1" style="border-collapse: collapse">
						<tbody>
							<tr>
								<th colspan="4">商品合計</th>
								<td colspan="3"></td>
								<!-- 商品合計出す -->
							</tr>
							<tr>
								<th colspan="4">配送料</th>
								<td colspan="3"></td>
								<!-- 配送料出す -->
							</tr>
							<tr>
								<th colspan="4">ご請求金額</th>
								<td colspan="3"></td>
								<!-- 請求金額出す -->
							</tr>
						</tbody>
					</table>
				</div>

				<div class="row">
					<div class="col-xs-10">
						<table class="table table-hover table-inverse" border="1" style="border-collapse: collapse">
							<thead>
								<tr>
								   <th>商品名</th>
								   <th>単価(税込)</th>
								   <th>数量</th>
								   <th>小計</th>
								   <th>制作ステータス</th>
								 </tr>
							</thead>
							<tbody>
								<% @order_items.each do |order_item| %>
								 <tr>
									<td></td>
									<td><%= order_item.price %></td>
									<td><%= order_item.number %></td>
									<td><%= order_item.price * order_item.number %></td>
							        <td><%= form_for(order_item, url:admin_order_item_path(order_item)) do |f| %> 
							        	<%= f.select :production_status, [["着手不可", "着手不可"], ["制作待ち", "制作待ち"], ["製作中","製作中"], ["制作完了", "制作完了"]]  %>
										<%= f.submit :更新 %>
										 <% end %>
									</td>
								 </tr>	   
							    <% end %>


								<!-- 各項目記載する -->
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
